<div>
  <img src="<%= @photo %>" width="400">
</div>

<h1>Edit Photo #<%= @photo_id %></h1>

<form action="http://localhost:3000/update_photo/<%= @photo_id %>">
  Caption:
  <input name="the_caption" type="text" value="<%= @caption %>">

  Source:
  <input name="the_source" type="text" value="<%= @source %>">

  <button>Update Photo</button>
</form>

<a href="/photos/<%= @photo_id %>">Cancel and go back</a>
